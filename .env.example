# BETNEXA Environment Configuration
# Copy this to .env file and fill in with your actual values

# ==================== SUPABASE CONFIGURATION ====================
# Get these from https://app.supabase.com > Settings > API

# Your Supabase project URL
SUPABASE_URL=https://your-project.supabase.co

# Supabase Service Role Key (Server-side only! Never expose to client)
# Use this for backend operations (user creation, admin actions, etc.)
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Supabase Anon Key (Safe to expose to client)
# Used for frontend operations with row-level security
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# JWT Secret from Supabase Auth Settings
SUPABASE_JWT_SECRET=your-super-secret-jwt-secret-key

# ==================== PAYHERO PAYMENT CONFIGURATION ====================
# Get these from PayHero dashboard

# PayHero API Key
PAYHERO_API_KEY=6CUxNcfi9jRpr4eWicAn

# PayHero API Secret
PAYHERO_API_SECRET=j6zP2XpAlXn9UhtHOj9PbYQVAdlQnkeyrEWuFOAH

# PayHero Account ID
PAYHERO_ACCOUNT_ID=3398

# ==================== SERVER CONFIGURATION ====================

# Node environment
NODE_ENV=production

# Server port
PORT=5000

# ==================== PAYMENT CONFIGURATION ====================

# Whether to use mock payments (false = use real PayHero API)
USE_MOCK_PAYMENTS=false

# Payment callback URL (where PayHero sends results)
# This must be accessible from the internet
CALLBACK_URL=https://your-domain.com/api/payments/callback

# Payment polling timeout in seconds
PAYMENT_POLL_TIMEOUT=600

# ==================== DATABASE CONFIGURATION ====================

# Auto-migrate database schema on startup (development only)
DB_AUTO_MIGRATE=false

# Enable detailed logging
DB_DEBUG=false

# ==================== APPLICATION CONFIGURATION ====================

# Minimum deposit amount (in KSH)
MIN_DEPOSIT=500

# Minimum stake amount (in KSH)
MIN_STAKE=500

# Maximum stake amount (in KSH)
MAX_STAKE=1000000

# Withdrawal activation fee (in KSH)
WITHDRAWAL_ACTIVATION_FEE=500

# Session expiration time (in seconds)
SESSION_TIMEOUT=86400

# Maximum concurrent sessions per user
MAX_CONCURRENT_SESSIONS=5

# ==================== ADMIN CONFIGURATION ====================

# Default admin phone number (for initial setup)
ADMIN_PHONE=0714945142

# Default admin password (CHANGE THIS IN PRODUCTION!)
ADMIN_PASSWORD=4306

# Require admin approval for new user registrations
REQUIRE_ADMIN_APPROVAL=false

# ==================== SECURITY CONFIGURATION ====================

# JWT Secret for session tokens
JWT_SECRET=your-jwt-secret-key-change-this

# Password hashing rounds (bcrypt)
PASSWORD_HASH_ROUNDS=10

# Enable rate limiting
RATE_LIMIT_ENABLED=true

# Rate limit: requests per minute
RATE_LIMIT_REQUESTS=100

# Enable CORS
CORS_ENABLED=true

# Allowed CORS origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://your-domain.com

# ==================== EMAIL CONFIGURATION (Optional) ====================

# Email service provider (sendgrid, mailgun, etc.)
EMAIL_SERVICE=sendgrid

# Email service API key
EMAIL_API_KEY=

# From email address
EMAIL_FROM=noreply@betnexa.com

# ==================== LOGGING & MONITORING ====================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Send error logs somewhere (sentry, etc.)
ERROR_TRACKING_URL=

# ==================== FRONTEND CONFIGURATION ====================
# (Copy values to frontend .env file with VITE_ prefix)

# Supabase URL (public, can expose to frontend)
VITE_SUPABASE_URL=https://your-project.supabase.co

# Supabase Anon Key (public, can expose to frontend)
VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Backend API URL
VITE_API_URL=https://your-domain.com/api

# Environment
VITE_ENVIRONMENT=production

# ==================== DEVELOPMENT ONLY ====================

# Skip PayHero API calls in development
DEV_SKIP_PAYMENTS=false

# Use test data
DEV_USE_TEST_DATA=false

# Enable SQL query logging
DEV_LOG_SQL=false

# Mock user phone numbers (comma-separated)
DEV_TEST_PHONES=0714945142,0712345678,0798765432
